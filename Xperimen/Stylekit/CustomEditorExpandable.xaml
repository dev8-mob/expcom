<?xml version="1.0" encoding="utf-8" ?>
<Frame xmlns="http://xamarin.com/schemas/2014/forms"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       x:Class="Xperimen.Stylekit.CustomEditorExpandable"
       xmlns:stylekit="clr-namespace:Xperimen.Stylekit" 
       HorizontalOptions="FillAndExpand" BorderColor="DarkGray" 
       HasShadow="False" CornerRadius="3" BackgroundColor="{DynamicResource Key=DimGray2}"
       IsClippedToBounds="True" Padding="0">

    <StackLayout HorizontalOptions="FillAndExpand" Orientation="Vertical" Spacing="0">
        <stylekit:EditorExpandableBorderless x:Name="editor" Text="{Binding DataString}" FontFamily="{DynamicResource Key=NormalFont}"/>
        <BoxView x:Name="line" HorizontalOptions="FillAndExpand" HeightRequest="2" BackgroundColor="DarkGray"/>
    </StackLayout>

</Frame>