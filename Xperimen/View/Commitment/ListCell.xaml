<?xml version="1.0" encoding="UTF-8"?>
<StackLayout xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Xperimen.View.Commitment.ListCell"
             xmlns:stylekit="clr-namespace:Xperimen.Stylekit"
             Orientation="Vertical" Spacing="0" Margin="10,0,10,0">

    <Grid HorizontalOptions="FillAndExpand" ColumnSpacing="10" Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.35*"/>
            <ColumnDefinition Width="0.65*"/>
        </Grid.ColumnDefinitions>
        <StackLayout Orientation="Horizontal" Spacing="5" Grid.Row="0" Grid.Column="0">
            <stylekit:XLabel Text="RM" VerticalOptions="End"/>
            <stylekit:XLabel Text="{Binding Amount, StringFormat='{0:0.00}'}" FontSize="18"/>
            <Label x:Name="lbl_id" Text="{Binding Id}" FontSize="Small" IsVisible="False"/>
        </StackLayout>
        <stylekit:XLabel Text="{Binding Title}" Grid.Row="0" Grid.Column="1" FontFamily="{DynamicResource Key=BoldFont}"
                         LineBreakMode="TailTruncation" MaxLines="1" VerticalOptions="End"/>
    </Grid>
    <BoxView HeightRequest="1" HorizontalOptions="FillAndExpand" BackgroundColor="LightGray"/>

</StackLayout>