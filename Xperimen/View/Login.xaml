<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Xperimen.View.Login"
             Title="Login">
    
    <ContentPage.Content>

        <AbsoluteLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" BackgroundColor="Transparent">

            <ScrollView HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0,0,1,1">

                <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">

                    <StackLayout Padding="25,0,25,0" Orientation="Vertical" VerticalOptions="CenterAndExpand" HorizontalOptions="FillAndExpand" Spacing="0">
                        <Image BackgroundColor="LightGray" HeightRequest="130" WidthRequest="130" HorizontalOptions="CenterAndExpand" VerticalOptions="Center" Aspect="AspectFit"/>
                        <Frame Padding="0" CornerRadius="5" BorderColor="DarkGray" Margin="0,50,0,0" HasShadow="False" HorizontalOptions="FillAndExpand" IsClippedToBounds="True">
                            <StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand" Spacing="0">
                                <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" Spacing="0">
                                    <Image BackgroundColor="LightGray" HeightRequest="25" WidthRequest="25" VerticalOptions="Center" Margin="8,0,8,0"/>
                                    <Entry x:Name="entry_username" Placeholder="Username"/>
                                </StackLayout>
                                <BoxView HorizontalOptions="FillAndExpand" HeightRequest="2" BackgroundColor="DarkGray" Margin="0,0,0,1"/>
                            </StackLayout>
                        </Frame>

                        <Frame Padding="0" CornerRadius="5" BorderColor="DarkGray" Margin="0,10,0,0" HasShadow="False" HorizontalOptions="FillAndExpand" IsClippedToBounds="True">
                            <StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand" Spacing="0">
                                <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" Spacing="0">
                                    <Image BackgroundColor="LightGray" HeightRequest="25" WidthRequest="25" VerticalOptions="Center" Margin="8,0,8,0"/>
                                    <Entry x:Name="entry_password" Placeholder="Password" IsPassword="True"/>
                                </StackLayout>
                                <BoxView HorizontalOptions="FillAndExpand" HeightRequest="2" BackgroundColor="DarkGray" Margin="0,0,0,1"/>
                            </StackLayout>
                        </Frame>

                        <Frame Padding="0,10,0,10" CornerRadius="3" BorderColor="{DynamicResource Key=Primary}" HorizontalOptions="FillAndExpand"
                               Margin="0,20,0,0" BackgroundColor="{DynamicResource Key=Primary}" HasShadow="False" IsClippedToBounds="True">
                            <Label Text="SUBMIT" HorizontalOptions="Center" VerticalOptions="Center"/>
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Tapped="Submit_Clicked"/>
                            </Frame.GestureRecognizers>
                        </Frame>

                    </StackLayout>
                    <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"/>
                    <Label Text="Version 1.0.0" HorizontalOptions="Center" VerticalOptions="End" FontSize="10" Margin="0,0,0,20"/>

                </StackLayout>

            </ScrollView>

            <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" BackgroundColor="Black" Opacity="0.7"
                         AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0, 0, 1, 1" IsVisible="{Binding IsLoading, Mode=TwoWay}"/>

            <StackLayout IsVisible="{Binding IsLoading, Mode=TwoWay}" AbsoluteLayout.LayoutFlags="PositionProportional" AbsoluteLayout.LayoutBounds="0.5,0.5,-1,-1" 
                         BackgroundColor="{DynamicResource Primary}" Padding="12" Orientation="Vertical">
                <ActivityIndicator IsRunning="{Binding IsLoading, Mode=TwoWay}" Color="Black" HorizontalOptions="Center"/>
                <Label Text="Loading.." HorizontalOptions="Center" TextColor="Black"/>
            </StackLayout>

        </AbsoluteLayout>

    </ContentPage.Content>
    
</ContentPage>