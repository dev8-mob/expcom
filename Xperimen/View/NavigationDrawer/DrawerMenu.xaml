                        <cell:DrawerMenuCell/>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </StackLayout>-->

            <!--x:FieldModifier="public"-->
            <!-- menu list -->
            <ListView x:Name="listview" HasUnevenRows="True" SeparatorVisibility="None" ItemsSource="{Binding MenuList}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <cell:DrawerMenuCell/>
