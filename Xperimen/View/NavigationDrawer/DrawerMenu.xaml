<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Xperimen.View.NavigationDrawer.DrawerMenu"
             xmlns:stylekit="clr-namespace:Xperimen.Stylekit"
             Title="☰">
    
    <ContentPage.Content>

        <stylekit:XStacklayout Orientation="Vertical" Spacing="0">

            <!-- header -->
            <StackLayout HorizontalOptions="FillAndExpand" Orientation="Horizontal" Spacing="0">
                <Frame x:Name="frame_profile" HorizontalOptions="Fill" VerticalOptions="Center" BorderColor="DarkGray" HasShadow="False" 
                       BackgroundColor="Transparent" Padding="0" CornerRadius="20" IsClippedToBounds="True" Margin="15">
                    <Image x:Name="img_pic" Aspect="AspectFill" HorizontalOptions="Fill" VerticalOptions="Fill" 
                           HeightRequest="65" WidthRequest="65"/>
                </Frame>
                <StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand" Spacing="0">
                    <stylekit:XLabel x:Name="lbl_fullname" Text="-" FontFamily="{DynamicResource Key=BoldFont}" FontSize="18"/>
                    <stylekit:XLabel x:Name="lbl_name" Text="-" FontFamily="{DynamicResource Key=ItalicFont}"/>
                    <stylekit:XLabel x:Name="lbl_desc" Text="-" Margin="0,15,0,0"/>
                </StackLayout>
                <StackLayout.Padding>
                    <OnPlatform x:TypeArguments="Thickness" Android="0,15,15,15" iOS="0,30,15,30"/>
                </StackLayout.Padding>
                <StackLayout.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnHeaderTapped"/>
                </StackLayout.GestureRecognizers>
            </StackLayout>
            <BoxView HorizontalOptions="FillAndExpand" HeightRequest="2" BackgroundColor="DarkGray"/>
            <!-- menu list -->
            <ListView x:Name="listview" HasUnevenRows="True" SeparatorVisibility="None" BackgroundColor="{DynamicResource DimGray}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <stylekit:XStacklayout Orientation="Horizontal">
                                <stylekit:XImage Source1="{Binding ImageIcon1}" Source2="{Binding ImageIcon2}" HorizontalOptions="Start" 
                                                 HeightRequest="30" WidthRequest="30" Margin="20,15,20,15" VerticalOptions="Center"/>
                                <stylekit:XLabel Text="{Binding Title}" HorizontalOptions="StartAndExpand" VerticalOptions="Center"/>
                            </stylekit:XStacklayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </stylekit:XStacklayout>

    </ContentPage.Content>
    
</ContentPage>