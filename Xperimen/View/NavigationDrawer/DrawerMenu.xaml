                                       IsVisible="{Binding IsSelected}" Grid.Row="0" Grid.Column="0"/>
                                <StackLayout Orientation="Horizontal" Grid.Row="0" Grid.Column="0">
                                    <stylekit:XImage Source1="{Binding ImageIcon1}" Source2="{Binding ImageIcon2}" HorizontalOptions="Start" 
                                                     HeightRequest="30" WidthRequest="30" Margin="20,8,20,8" VerticalOptions="Center"/>
                                    <stylekit:XLabel Text="{Binding Title}" HorizontalOptions="StartAndExpand" VerticalOptions="Center" 
                                                     TextColor="{Binding TextMenuColor}"/>
                                </StackLayout>
                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="CellTapped"/>
                                </Grid.GestureRecognizers>
                            </Grid>
                        </ViewCell>-->
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
